{
  "manifest_version": 2,

  "name": "Odds Converter",
  "description": "Click this icon to convert moneyline odds into implied probability, and vice versa.",
  "version": "1.0",
  "background" : {
    "scripts" : ["background.js", "rightclick.js"]
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "Convert Odds"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}
